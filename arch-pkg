#!/bin/bash

function usage() {
    echo "Usage: arch-pkg [install|remove|update|search|list] [package manager] [package name]"
    exit 1
}

if [[ $# -ne 3 ]]; then
    usage
fi

command=$1
manager=$2
package=$3

case $manager in
    pacman)
        case $command in
            install)
                sudo pacman -S $package
                ;;
            remove)
                sudo pacman -R $package
                ;;
            update)
                sudo pacman -Syu
                ;;
            search)
                sudo pacman -Q $package
                ;;
            list)
                sudo pacman -Qe
                ;;
            *)
                usage
                ;;
        esac
        ;;
    flatpak)
        case $command in
            install)
                flatpak install $package
                ;;
            remove)
                flatpak uninstall $package
                ;;
            update)
                flatpak update $package
                ;;
            search)
               flatpak search $package
               ;;
            list)
               flatpak list
               ;;
            *)
                usage
                ;;
        esac
        ;;
    yay)
        case $command in
            install)
                yay -S $package
                ;;
            remove)
                yay -R $package
                ;;
            update)
                yay -Syu
                ;;
            search)
                yay -Q $package
                ;;
            list)
                yay -Qe
                ;;
            *)
                usage
                ;;
        esac
        ;;
    *)
        usage
        ;;
esac

exit 0
