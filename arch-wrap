#!/bin/bash

# Define the package manager options
echo "Which package manager would you like to use?"
echo "1. pacman"
echo "2. flatpak"
echo "3. yay (AUR)"

# Read user input
read -p "Enter your choice: " choice

# Create a case statement to handle different package managers
case $choice in
  1)
    echo "Using pacman..."
    # Run pacman commands here
    ;;
  2)
    echo "Using flatpak..."
    # Run flatpak commands here
    ;;
  3) echo "Using yay (AUR)"
     # Run yay commands here
  *)
    echo "Invalid choice. Please enter a number between 1 and 3."
    ;;
esac
