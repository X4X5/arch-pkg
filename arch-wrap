#!/bin/bash

if [[ $1 == "install" ]]; then
    pacman -S $2
elif [[ $1 == "remove" ]]; then
    pacman -R $2
elif [[ $1 == "update" ]]; then
    pacman -Syu
elif [[ $1 == "search" ]]; then
    pacman -Ss $2
elif [[ $1 == "list" ]]; then
    pacman -Q
elif [[ $1 == "flatpak-install" ]]; then
    flatpak install $2
elif [[ $1 == "flatpak-remove" ]]; then
    flatpak uninstall $2
elif [[ $1 == "flatpak-update" ]]; then
    flatpak update
elif [[ $1 == "flatpak-search" ]]; then
    flatpak search $2
elif [[ $1 == "flatpak-list" ]]; then
    flatpak list
elif [[ $1 == "yay-install" ]]; then
    yay -S $2
elif [[ $1 == "yay-remove" ]]; then
    yay -R $2
elif [[ $1 == "yay-update" ]]; then
    yay -Syu
elif [[ $1 == "yay-search" ]]; then
    yay -Ss $2
elif [[ $1 == "yay-list" ]]; then
    yay -Q
else
    echo "Invalid command"
fi
